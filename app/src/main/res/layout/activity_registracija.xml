
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.fit.vedads.appstore.RegistracijaActivity">
    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <TextView
        android:id="@+id/tv_regNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Registracija"
        android:textColor="@color/White"
        />
    <EditText
        android:maxLength="100"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regUsername"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/tv_regNaslov"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:maxLength="100"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regIme"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/et_regUsername"
        android:hint="ime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:maxLength="100"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regPrezime"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/et_regIme"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="prezime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:maxLength="100"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regEmail"
        android:layout_below="@id/et_regPrezime"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="e-mail"
        android:inputType="textWebEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:maxLength="100"
        android:inputType="textPassword"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regPassword"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/et_regEmail"
        android:hint="password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:maxLength="100"
        android:inputType="textPassword"
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/et_regPassword2"
        android:layout_below="@+id/et_regPassword"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="confirm password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_regError"
    android:text=""
    android:layout_below="@+id/et_regPassword2"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="1dp"
    android:textColor="@color/red"/>

   <Button
        android:background="@drawable/control_shape"
        android:padding="10dp"
        android:height="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U redu"
        android:typeface="sans"
        android:id="@+id/btnRegistracija"
        android:layout_below="@+id/tv_regError"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true" />
        </RelativeLayout>
</ScrollView>

    </RelativeLayout>

