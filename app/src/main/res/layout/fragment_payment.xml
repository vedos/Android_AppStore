<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/SlateGray"
    tools:context="com.fit.vedads.appstore.SectionAplikacije.PaymentFragment">

    <TextView android:text="Unesite podatke sa kreditne kartice: "
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/WhiteSmoke"/>

    <EditText
        android:maxLength="16"
        android:hint="Broj kartice"
        android:inputType="number"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/control_shape"
        android:id="@+id/payment_etBrKartice"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <EditText
        android:maxLength="3"
        android:hint="CVV"
        android:inputType="number"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/control_shape"
        android:id="@+id/payment_etCVV"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/red"
        android:id="@+id/payment_tvError"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Plati"
        android:layout_gravity="right"
        android:id="@+id/payment_btnUredu"
        android:layout_margin="10dp"
        android:textColor="@color/White"
        android:background="@color/YellowGreen"/>


</LinearLayout>
